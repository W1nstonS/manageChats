<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_login_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/LoginText"
            android:layout_marginVertical="16dp"
            style="@style/Theme.Material3.Dark"
            android:textSize="32dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/vk_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_enter_vk"
            android:textSize="20dp"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:height="80dp"
            android:width="320dp"/>

        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/cpv_circule"
            android:layout_width="@dimen/loaded_size"
            android:layout_height="@dimen/loaded_size"
            android:layout_marginTop="16dp"
            app:cpv_color="@color/material_dynamic_neutral_variant20"
            android:visibility="gone"
            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>